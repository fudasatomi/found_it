<div class="conteiner">
	<div class="row">
		<div class="col-xs-3 user_profile">
			<%= render 'users/user_profile', user: @user %>
		</div>
		<div class="col-xs-8 recipes_index">
				<h2>
					<% if current_user != @user %>
						<%= @user.name %>のいいねしたレシピ
					<% else %>
						あなたのいいねしたレシピ
					<% end %></h2>
				<p>全<strong><%= @recipes.count %></strong>件</p>
				<%= render 'recipes/recipes_index', recipes: @recipes %>
		</div>
	</div>
</div>