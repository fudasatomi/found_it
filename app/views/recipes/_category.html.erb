<div class="col-xs-3">
	<div class="side_bar">
		<div class="search_btn">
			<%= link_to 'レシピ詳細検索' ,search_recipes_path ,class: "btn btn-lg btn-block btn-blue" %>
		</div>
		<div class="category_list">
			<table class="table">
				<thead>
					<tr>
						<th>カテゴリー 一覧</th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td>
						<% categories.each do |parent| %>
							<h5><strong><%= link_to category_all_index_recipe_path(parent) do %>
								 <%= parent.name %>　全て
								 <% end %></strong></h5>
								<% parent.category.each do |sub_category| %>
									<h5>　<%= link_to category_index_recipe_path(sub_category) do  %>
										<%=sub_category.name %><% end %></h5>
								<% end %>
							<% end %>
						</td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
</div>